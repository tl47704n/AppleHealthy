<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pc.applehealthy.SetOnlineAlarm">

    <TextView
        android:id="@+id/tv_alarm_set_1"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textStyle="bold"
        android:text="No Online data yet"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_alarm_set_2"
        android:textStyle="bold"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Please click"
        android:textSize="40sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="98dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_alarm_set_3"
        android:textStyle="bold"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="Search Button"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="168dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/bt_setOnlineAlarm"

        android:text="Turn On This"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textStyle="bold"

        android:layout_width="0dp"
        android:layout_height="120dp"
        android:background="@drawable/search_button_shape_orange"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="233dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/bt_setanother"

        android:text="To main screen"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textStyle="bold"

        android:layout_width="0dp"
        android:layout_height="120dp"
        android:background="@drawable/search_button_shape_blue"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="375dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />
</android.support.constraint.ConstraintLayout>
